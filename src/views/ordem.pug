doctype html
html(lang="pt-br")
  head
    title Detalhes da ordem - SAAS
    include includes/head
  body
    .system
      .system__logo
        a(onclick="toIndex()")
          embed(src="./img/logotipo.svg" alt="Logotipo da LBomfim")
        hr
      .system__order-details
        h1.system__order-details__title Ordem 4325
        p.system__order-details__client-name #[strong Cliente:] Fábio Gonçalves Silva
        p.system__order-details__address #[strong Endereço:] Av. Castelo Branco, 1256
        .system__order-details__left
          h2.system__order-details__left__subtitle Antes
          hr
        .system__order-details__center
        .system__order-details__right
          h2.system__order-details__right__subtitle Depois
          hr
      .system__help
        button.system__help__button.secondary-button(id="botaoAjuda" onclick="toPainelAjuda()")
          i.fas.fa-question-circle
          | Preciso de ajuda
